<Page x:Class="Demo_UWP_SimpleConverter.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Demo_UWP_SimpleConverter"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Width="Auto">

    <Grid x:Name="ValueToConvertGrid"
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          HorizontalAlignment="Center"
          Width="432">
        <TextBlock x:Name="TitleTextBlock"
                   HorizontalAlignment="Center"
                   Height="58"
                   Margin="50,10,41,0"
                   Text="The Converter"
                   VerticalAlignment="Top"
                   Width="341"
                   FontSize="32"
                   TextAlignment="Center" />
        <TextBox x:Name="ValueToCovertTextBox"
                 HorizontalAlignment="Left"
                 Height="35"
                 Margin="160,109,0,0"
                 TextAlignment="Right"
                 VerticalAlignment="Top"
                 Width="114" />
        <Button x:Name="SpeakButton"
                Content="Speak"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Height="35"
                Width="114"
                Click="SpeakButton_Click"
                Margin="160,350,158,0" />
        <TextBox x:Name="ConvertedValueTextBox"
                 HorizontalAlignment="Left"
                 Height="35"
                 Margin="160,315,0,0"
                 TextAlignment="Right"
                 VerticalAlignment="Top"
                 Width="114" />
        <RadioButton x:Name="InchesToFeetRadioButton"
                     Content="Inches to Feet"
                     GroupName="ConversionType"
                     HorizontalAlignment="Left"
                     Margin="160,177,0,0"
                     VerticalAlignment="Top"
                     Checked="InchesToFeetRadioButton_Checked" />
        <RadioButton x:Name="FeetToInchesRadioButton"
                     Content="Feet to Inches"
                     GroupName="ConversionType"
                     HorizontalAlignment="Left"
                     Margin="160,208,0,0"
                     VerticalAlignment="Top"
                     Checked="FeetToInchesRadioButton_Checked" />

    </Grid>
</Page>
